{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "../server/src/models/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "module": "esnext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@models/*": ["../server/src/models/"]
    }
  }
}
